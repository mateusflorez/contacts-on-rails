<div class="row">
    <div class="col-xs-12">
        <h1>Sign in</h1>
    </div>

    <div class="col-md-6 col-md-offset-3 col-xs-12">
        <%= form_for :session, url: login_path, method: :post do |login| %>
        <div class="form-group">
            <%= login.label :email %>
            <%= login.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= login.label :password %>
            <%= login.password_field :password, class: 'form-control' %>
        </div>
        <%= login.submit 'Login', class:'btn btn-primary' %>
        <% end %>
    </div>
</div>
