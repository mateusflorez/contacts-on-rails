<div class="row">
    <div class="col-xs-12">
        <h1>Sign up</h1>
    </div>

    <div class="col-md-6 col-md-offset-3 col-xs-12">
        <%= form_for @user do |user| %>
        <%= render 'layouts/error_messages', object: user.object %>
        <div class="form-group">
            <%= user.label :name %>
            <%= user.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= user.label :email %>
            <%= user.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= user.label :password %>
            <%= user.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= user.label :password_confirmation %>
            <%= user.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <%= user.submit 'Create account', class:'btn btn-primary' %>
        <% end %>
    </div>
</div>
